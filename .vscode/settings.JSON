{
    "runOnSave.statusMessageTimeout": 3000,
    "runOnSave.commands": [
        {
            "match": ".*\\.ipynb$",
            "command": "jupyter nbconvert --to python \"${file}\" ; git add . ; git commit -m \"Auto-save-${fileBasenameNoExtension}\"",
            "runIn": "terminal",
            "runningStatusMessage": "Converting and committing ${fileBasename}...",
            "finishStatusMessage": "âœ… Auto-saved ${fileBasename}!"
        }
    ]
}